{
  /* This is the BuckleScript configuration file. Note that this is a comment;
  BuckleScript comes with a JSON parser that supports comments and trailing
  comma. If this screws with your editor highlighting, please tell us by filing
  an issue!
  */
  "name": "razzle-reason",
  "bsc-flags": [
    "-bs-no-version-header",
    "-bs-super-errors"
  ],
  "refmt": 3,
  "reason": {
    "react-jsx": 3
  },
  "bs-dependencies": [
    "reason-react",
    "reason-apollo-hooks",
    "reason-apollo",
    "@glennsl/bs-json",
    "re-debouncer",
    "reason-react-update"
  ],
  "ppx-flags": [
    "graphql_ppx/ppx"
  ],
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    }
  ],
  "package-specs": [
    {
      "module": "es6-global",
      "in-source": false
    }
  ]
}